{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RemoteCDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "AzureAdB2C": {
    "Instance": "https://YOUR_TENANT.b2clogin.com",
    "Domain": "YOUR_TENANT.onmicrosoft.com",
    "TenantId": "YOUR_TENANT_ID",
    "ClientId": "YOUR_CLIENT_ID",
    "SignUpSignInPolicyId": "B2C_1_signupsignin1",
    "CallbackPath": "/signin-oidc"
  },
  "KeyVault": {
    "VaultName": "YOUR_KEYVAULT_NAME"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "YOUR_INSTRUMENTATION_KEY"
  },
  "RemoteControl": {
    "Provider": "Rust",
    "ControlR": {
      "ApiUrl": "https://localhost:5000",
      "ApiKey": "YOUR_CONTROLR_API_KEY",
      "EnableLogging": true,
      "ConnectionTimeoutMs": 30000
    },
    "Rust": {
      "EnableHardwareAcceleration": true,
      "TargetFrameRate": 60,
      "CaptureMode": "PrimaryMonitor",
      "TransportProtocol": "Quic",
      "EnableFrameDifferencing": true,
      "CompressionLevel": "Medium"
    },
    "Performance": {
      "MaxConcurrentSessions": 100,
      "SessionTimeoutMinutes": 60,
      "MaxFrameRate": 60,
      "DefaultQuality": 75
    }
  },
  "Notifications": {
    "Sms": {
      "Provider": "Twilio",
      "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
      "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
      "FromNumber": "YOUR_TWILIO_PHONE_NUMBER"
    },
    "Email": {
      "Provider": "SendGrid",
      "ApiKey": "YOUR_SENDGRID_API_KEY",
      "FromEmail": "noreply@remotec.com",
      "FromName": "RemoteC Support"
    }
  },
  "Security": {
    "PinLength": 6,
    "PinExpirationMinutes": 10,
    "MaxPinAttempts": 3,
    "SessionEncryptionKey": "YOUR_ENCRYPTION_KEY",
    "JwtSecret": "YOUR_JWT_SECRET",
    "JwtExpirationMinutes": 60
  },
  "FileTransfer": {
    "ChunkSize": 1048576,
    "MaxFileSize": 5368709120,
    "StoragePath": "./FileTransfers",
    "EnableEncryption": true,
    "EnableCompression": true,
    "MaxConcurrentTransfers": 10,
    "ChunkRetryCount": 3,
    "ChunkRetryDelayMs": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "RemoteC": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/remotec-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*"
}