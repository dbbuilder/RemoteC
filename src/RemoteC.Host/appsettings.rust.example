{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Host": {
    "Id": "#{HOST_ID}#",
    "Secret": "#{HOST_SECRET}#"
  },
  "Api": {
    "BaseUrl": "https://api.remotec.example.com",
    "TokenEndpoint": "/api/auth/host/token"
  },
  "HostConfiguration": {
    "ServerUrl": "https://api.remotec.example.com",
    "MaxConcurrentSessions": 5,
    "EnableRecording": true,
    "EnableFileTransfer": true,
    "EnableClipboard": true,
    "EnableAudio": false
  },
  "RemoteControlProvider": {
    "Type": "Rust",
    "Settings": {
      // Rust provider uses the built-in RemoteC Core engine
      // No additional settings required
    }
  }
}